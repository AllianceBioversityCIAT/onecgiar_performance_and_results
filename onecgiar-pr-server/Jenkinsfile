pipeline {
    agent any
    
     tools {
        nodejs "Node 20"
    }

    stages {
        stage('Cloning Git') {
            steps {
                git branch: 'setup-jenkins', url: 'https://github.com/AllianceBioversityCIAT/onecgiar_pr'
            }
        }

        stage('Install dependencies') {
            steps {
                dir('clarisaintegration') {
                    sh 'npm install'
                }
            }
        }

        stage('Test') {
            steps {
                dir('clarisaintegration') {
                    sh 'npm test'
                }
            }
        }

        stage('linting') {
            steps {
                dir('clarisaintegration') {
                    sh 'npm run lint'
                }
            }
        }
        
    }
}